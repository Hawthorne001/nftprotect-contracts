  },
  "homepage": "https://github.com/nftprotect/nftprotect-contracts#readme",
  "dependencies": {
    "@kleros/erc-792": "^8.0.0",
    "dotenv": "^16.3.1",
    "@openzeppelin/contracts": "^4.8.1"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-waffle": "^2.0.5",
